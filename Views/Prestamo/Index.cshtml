@model IEnumerable<Biblioteca_Web.Models.Prestamo>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    @Html.ActionLink("Crear nuevo Prestamo","CreatePrestamo")
</div>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Libro.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Libro.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FecPrestamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FecDevolucion)
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Libro.Codigo)
            </td>
            <td>
                @Html.DisplayFor(model => item.Libro.Titulo)
            </td>
            <td>
                @Html.DisplayFor(model => item.Usuario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(model => item.FecPrestamo)
            </td>
            <td>
                @Html.DisplayFor(model => item.FecDevolucion)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarPrestamo", new { id = item.IdPrestamo })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "EliminarPrestamo", new { id = item.IdPrestamo })
            </td>
        </tr>
    }
</table>
